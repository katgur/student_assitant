<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.project.ProjectDetailFragment">

    <TextView
        android:id="@+id/details_tv_name"
        style="@style/TextAppearance.StudentAssistant.Title.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/very_important_research"
        android:textColor="@color/neutral90" />

    <TextView
        android:id="@+id/details_tv_time"
        style="@style/TextAppearance.StudentAssistant.Title.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="14dp"
        android:text="05 янв - 05 фев"
        android:textColor="@color/neutral90" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral20" />

    <TextView
        android:id="@+id/details_tv_details"
        style="@style/TextAppearance.StudentAssistant.Title.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="14dp"
        android:text="@string/details"
        android:textColor="@color/neutral90" />

    <TextView
        android:id="@+id/details_tv_description"
        style="@style/TextAppearance.StudentAssistant.SmallTitle.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="4dp"
        android:text="@string/description"
        android:textColor="@color/neutral90" />

    <TextView
        android:id="@+id/details_tv_description_val"
        style="@style/TextAppearance.StudentAssistant.Text.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="Take a part in a new super modern research project." />

    <TextView
        android:id="@+id/details_tv_count"
        style="@style/TextAppearance.StudentAssistant.SmallTitle.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="4dp"
        android:text="@string/number_of_students"
        android:textColor="@color/neutral90" />

    <TextView
        android:id="@+id/details_tv_count_val"
        style="@style/TextAppearance.StudentAssistant.Text.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="5" />

    <TextView
        android:id="@+id/details_tv_status"
        style="@style/TextAppearance.StudentAssistant.SmallTitle.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="4dp"
        android:text="@string/project_status"
        android:textColor="@color/neutral90" />

    <TextView
        android:id="@+id/details_tv_status_val"
        style="@style/TextAppearance.StudentAssistant.Text.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="Created" />

    <TextView
        style="@style/TextAppearance.StudentAssistant.Title.Neutral90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="14dp"
        android:text="@string/tags"
        android:textColor="@color/neutral90" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Theme.StudentAssistant.SmallBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="Machine Learning" />

        <TextView
            style="@style/Theme.StudentAssistant.SmallBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="NLP" />

        <TextView
            style="@style/Theme.StudentAssistant.SmallBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="Web" />

    </LinearLayout>

    <Button
        style="@style/Theme.StudentAssistant.LargeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="32dp"
        android:text="@string/join_project" />

</LinearLayout>