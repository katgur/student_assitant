<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.student_assistant.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_filtersFragment"
            app:destination="@id/filtersFragment" />
        <action
            android:id="@+id/action_mainFragment_to_projectEditFragment"
            app:destination="@id/projectEditFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
        <action
            android:id="@+id/action_mainFragment_to_projectDetailFragment"
            app:destination="@id/projectDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/filtersFragment"
        android:name="com.example.student_assistant.ui.filter.FilterFragment"
        android:label="FiltersFragment" >
        <action
            android:id="@+id/action_filtersFragment_to_parametersFragment"
            app:destination="@id/parametersFragment" />
    </fragment>
    <fragment
        android:id="@+id/projectEditFragment"
        android:name="com.example.student_assistant.ui.project.ProjectEditFragment"
        android:label="ProjectEditFragment" >
        <action
            android:id="@+id/action_projectEditFragment_to_parametersFragment"
            app:destination="@id/parametersFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/parametersFragment"
        android:name="com.example.student_assistant.ui.parameter.ParameterFragment"
        android:label="fragment_parameters"
        tools:layout="@layout/fragment_parameters" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.student_assistant.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.student_assistant.ui.profile.ProfileEditFragment"
        android:label="fragment_profile_edit"
        tools:layout="@layout/fragment_profile_edit" >
        <action
            android:id="@+id/action_profileEditFragment_to_parametersFragment"
            app:destination="@id/parametersFragment" />
    </fragment>
    <fragment
        android:id="@+id/projectDetailFragment"
        android:name="com.example.student_assistant.ui.project.ProjectDetailFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_projectDetailFragment_to_projectEditFragment"
            app:destination="@id/projectEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.student_assistant.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.student_assistant.ui.auth.RegistrationFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
</navigation>