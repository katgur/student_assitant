<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/Avanti_Bold</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/Avanti_Regular</item>
    </style>

    <style name="LargeTitle" parent="TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="Title" parent="TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="SmallTitle" parent="TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="Text" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="SmallText" parent="TextAppearance.Regular">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="PreviewText" parent="TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/neutral60</item>
        <item name="android:fontFamily">@font/Avanti_Regular</item>
    </style>
</resources>